<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:logo="@drawable/rsv"
            android:background="@color/white"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
        </android.support.v7.widget.Toolbar>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:layout_marginTop="?attr/actionBarSize"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:text="Name:"/>

            <EditText
                android:id="@+id/add_car_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/dashed_btn"
                android:padding="10dp"
                android:hint="Car's Name"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:text="Category:"/>

            <Spinner
                android:id="@+id/add_car_category"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/dashed_btn"
                android:padding="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:text="Kilometers:"/>

            <EditText
                android:id="@+id/add_car_kms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/dashed_btn"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:inputType="number"
                android:hint="Car's Kilometers"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:text="License Plate:"/>

            <EditText
                android:id="@+id/add_car_license_plate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/dashed_btn"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:hint="Car's License Plate"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:text="Total Reservations:"/>

            <EditText
                android:id="@+id/add_car_total_rsvs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/dashed_btn"
                android:layout_marginTop="10dp"
                android:inputType="number"
                android:padding="10dp"
                android:hint="Total Car's Reservations"/>

        </LinearLayout>

        <Button
            android:id="@+id/btn_add_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dashed_btn"
            android:layout_gravity="center_horizontal"
            android:padding="10dp"
            android:text="Save Changes"/>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="50sp"
            android:layout_gravity="center_vertical|center|center_horizontal"
            android:layout_height="wrap_content" />

    </LinearLayout>

</ScrollView>